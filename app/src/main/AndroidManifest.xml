<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arun.smartfarming">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.arun.smartfarming.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.arun.smartfarming.CameraActivity"
            android:parentActivityName="com.example.arun.smartfarming.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.example.arun.smartfarming.ShowContour"
            android:label="@string/title_activity_show_contour"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.arun.smartfarming.Histogram" />
        <activity
            android:name="com.example.arun.smartfarming.ClassifierActivity"
            android:label="@string/title_activity_classifier"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
